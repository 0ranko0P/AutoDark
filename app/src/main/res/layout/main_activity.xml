<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainActivity">

    <data>
        <variable name="viewModel" type="me.ranko.autodark.ui.MainViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include layout="@layout/appbar_main" android:id="@+id/appbar"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:onClick="@{() -> viewModel.triggerMasterSwitch()}"
            app:layout_anchor="@+id/appbar"
            app:layout_anchorGravity="bottom|end"
            app:setActiveImg="@{viewModel.switch}"
            tools:srcCompat="@drawable/ic_off" />

        <include layout="@layout/content_main_scroll" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>