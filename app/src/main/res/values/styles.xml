<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/appbar_background</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="materialCircleIconViewStyle">@style/MaterialCircleIconView</item>
    </style>

    <style name="AppTheme.LightActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="actionBarTheme">@style/Widget.ActionBar</item>
    </style>

    <style name="AppTheme.Transparent.ActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.Transparent.DarkActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.BottomSheetDialogDayNight" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorOnBackground">@color/bottom_sheet_background</item>
        <item name="android:navigationBarColor">@color/bottom_sheet_background</item>
    </style>

    <style name="Widget.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="CardBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:foreground">@drawable/material_button_outline_foreground</item>
        <item name="android:background">@drawable/material_button_outline_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="CardTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/permission_title_text_size</item>
        <item name="android:layout_marginStart">@dimen/permission_margin_title_start</item>
    </style>

    <style name="CardStyle" parent="CardBaseStyle"/>

    <style name="CardButton">
        <item name="android:background">@drawable/card_btn_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/permission_button_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CardProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/permission_button_size</item>
        <item name="android:layout_height">@dimen/permission_button_size</item>
        <item name="android:padding">@dimen/permission_progress_padding</item>
        <item name="android:progressTint">?attr/colorAccent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MaterialCircleIconView">
        <item name="iconForegroundChroma">600</item>
        <item name="iconBackgroundChroma">50</item>
        <item name="android:background">@drawable/shape_circle_icon_background</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <style name="MaterialPickerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">@dimen/picker_button_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/picker_button_margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/picker_button_margin_horizontal</item>
        <item name="android:outlineSpotShadowColor">?android:attr/colorPrimary</item>
    </style>

    <style name="SimpleDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="textAppearanceListItemSmall">@style/BaseDialogTextAppearance</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@color/bottom_sheet_background</item>
    </style>

    <!-- Set wallpaper destination item -->
    <style name="set_wallpaper_destination_item" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">@dimen/set_wallpaper_dialog_item_min_height</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
        <item name="android:textColor">@color/set_wallpaper_item_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:alpha">.87</item>
        <item name="android:paddingStart">?attr/dialogPreferredPadding</item>
        <item name="android:paddingEnd">?attr/dialogPreferredPadding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/set_wallpaper_dialog_item_drawable_padding</item>
        <item name="android:drawableTint">?android:colorAccent</item>
        <item name="android:drawableTintMode">src_atop</item>
    </style>

    <style name="BaseDialogTextAppearance">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Option tiles -->
    <style name="OptionTitleTextAppearance" parent="TitleTextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/option_title_font_text_size</item>
        <item name="android:lineHeight">@dimen/option_title_line_height</item>
    </style>

    <style name="PreviewCard" parent="CardView">
        <item name="android:clipChildren">true</item>
        <item name="contentPadding">0dp</item>
        <item name="cardCornerRadius">?android:dialogCornerRadius</item>
    </style>

    <!-- Individual components / Widgets -->
    <style name="TitleTextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title"/>
</resources>