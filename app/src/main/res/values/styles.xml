<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/primary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="materialCircleIconViewStyle">@style/MaterialCircleIconView</item>
        <item name="homeCardStyle">@style/CardStyle</item>
    </style>

    <style name="AppTransparentTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="actionBarTheme">@style/Widget.ActionBar</item>
    </style>

    <style name="AppTheme.TransparentActionBar" parent="AppTransparentTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Widget.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="CardBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:foreground">@drawable/material_button_outline_foreground</item>
        <item name="android:background">@drawable/material_button_outline_background_dark</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="CardTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/permission_title_text_size</item>
        <item name="android:layout_marginStart">@dimen/permission_margin_title_start</item>
    </style>

    <style name="CardStyle" parent="CardBaseStyle">
        <item name="android:background">@drawable/material_button_outline_background</item>
    </style>

    <style name="CardButton">
        <item name="android:background">@drawable/card_btn_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CardProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/permission_progress_size</item>
        <item name="android:layout_height">@dimen/permission_progress_size</item>
        <item name="android:padding">@dimen/permission_progress_padding</item>
        <item name="android:progressTint">?attr/colorAccent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MaterialCircleIconView">
        <item name="iconForegroundChroma">600</item>
        <item name="iconBackgroundChroma">50</item>
        <item name="android:background">@drawable/shape_circle_icon_background</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

</resources>